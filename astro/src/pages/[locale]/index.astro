  </header>

  <main>
    <Hero />
    <Services />
    <AboutUs />
    <TheSpot />
    <Testimonials />
    <ProductsCarousel />
    <Newsletter />
    <News />

    <!-- <Community /> -->
  </main>

  <div class="text-brand-blue">
    <FooterSeparator />
  </div>
  <Footer />
</Layout>
