---
import { useTranslations } from "../../i18n/utils";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  return [{ params: { locale: "en" } }, { params: { locale: "es" } }];
}

const lang = Astro.params.locale as "en" | "es";
const t = useTranslations(lang);
---

<Layout>
  <main class="">
    <div
      class="min-h-screen bg-brand-blue flex items-center justify-center px-4 md:py-4 py-10"
    >
      <div class="w-full max-w-2xl">
        <div class="flex justify-center mb-8">
          <div class="relative">
            <div
              class="absolute inset-0 bg-white/20 rounded-full blur-xl animate-pulse"
            >
            </div>

            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="size-20 text-white"
              ><circle cx="12" cy="12" r="10"></circle><path d="m9 12 2 2 4-4"
              ></path></svg
            >
            <!-- <CheckCircle2 class="w-20 h-20 text-white relative" strokeWidth={1.5} /> -->
          </div>
        </div>

        {/* Main Content */}
        <div class="text-center space-y-6 mb-12">
          <h1
            class="text-4xl md:text-6xl font-bold text-white text-balance uppercase"
          >
            {t("booked-success.title")}
          </h1>

          <p
            class="text-xl md:text-2xl text-white/90 text-pretty max-w-xl mx-auto leading-relaxed"
          >
            {t("booked-success.subtitle")}
          </p>
        </div>

        {/* Info Cards */}
        <div class="grid md:grid-cols-2 gap-4 mb-12">
          <div
            class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="size-8 text-white mb-3"
              ><path d="M12.8 19.6A2 2 0 1 0 14 16H2"></path><path
                d="M17.5 8a2.5 2.5 0 1 1 2 4H2"></path><path
                d="M9.8 4.4A2 2 0 1 1 11 8H2"></path></svg
            >
            <!-- <Wind class="w-8 h-8 text-white mb-3" strokeWidth={1.5} /> -->
            <h3 class="text-white font-semibold text-lg mb-2 uppercase">
              {t("booked-success.infocards.wind.title")}
            </h3>
            <p class="text-white/80 text-sm leading-relaxed">
              {t("booked-success.infocards.wind.subtitle")}
            </p>
          </div>

          <div
            class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="size-8 text-white mb-3"
              ><path
                d="M2 6c.6.5 1.2 1 2.5 1C7 7 7 5 9.5 5c2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"
              ></path><path
                d="M2 12c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"
              ></path><path
                d="M2 18c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"
              ></path></svg
            >
            <!-- <Waves class="w-8 h-8 text-white mb-3" strokeWidth={1.5} /> -->
            <h3 class="text-white font-semibold text-lg mb-2 uppercase">
              {t("booked-success.infocards.waves.title")}
            </h3>
            <p class="text-white/80 text-sm leading-relaxed">
              {t("booked-success.infocards.waves.subtitle")}
            </p>
          </div>
        </div>

        {/* CTA */}
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button
            class="uppercase bg-white text-brand-blue px-6 py-2 rounded-4xl hover:bg-white/90 font-semibold"
          >
            <a href={`/${lang}/`}>{t("booked-success.cta")}</a>
          </button>
        </div>

        {/* Footer Note */}
        <p class="text-center text-white/60 text-sm mt-12">
          {t("booked-success.footer.note")}{" "}
          <a
            href="mailto:info@faunakite.com"
            class="text-white hover:underline"
          >
            faunacomunidad@gmail.com
          </a>
        </p>
      </div>
    </div>
  </main>
</Layout>
