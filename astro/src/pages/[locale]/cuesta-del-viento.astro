    alt: "Cuesta del Viento",
    className: "object-[70%_50%]",
  },
  {
    src: Spot9Photo,
    alt: "Cuesta del Viento",
  },
  {
    src: Spot5Photo,
    alt: "Cuesta del Viento",
  },
  {
    src: Spot11Photo,
    alt: "Cuesta del Viento",
    className: "object-[50%_30%]",
  },
  {
    src: Spot6Photo,
    alt: "Cuesta del Viento",
