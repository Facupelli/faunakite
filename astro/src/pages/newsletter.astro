---
export const prerender = false;

import { actions } from "astro:actions";
import Layout from "../layouts/Layout.astro";

const result = Astro.getActionResult(actions.newsletter.subscribe);
---

<Layout>
  <main class="max-w-2xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Stay Updated</h1>
      <p class="text-lg text-gray-600">
        Subscribe to our newsletter for the latest kitesurfing tips, course
        updates, and special offers.
      </p>
    </div>

    <!-- Newsletter Form -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <!-- Success Message -->
      {
        result?.data && (
          <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg
                  class="h-5 w-5 text-green-400"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-green-800">Success!</h3>
                <p class="mt-2 text-sm text-green-700">{result.data.message}</p>
              </div>
            </div>
          </div>
        )
      }

      <!-- Error Message -->
      {
        result?.error && (
          <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg
                  class="h-5 w-5 text-red-400"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Error</h3>
                <p class="mt-2 text-sm text-red-700">{result.error.message}</p>
              </div>
            </div>
          </div>
        )
      }

      <form method="POST" action={actions.newsletter.subscribe}>
        <div class="space-y-6">
          <!-- Email Field -->
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Email Address *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
              placeholder="your@email.com"
            />
          </div>

          <!-- Name Field -->
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 mb-2"
            >
              Name (Optional)
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
              placeholder="Your name"
            />
          </div>

          <!-- Hidden source field -->
          <input type="hidden" name="source" value="newsletter_page" />

          <!-- Submit Button -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full px-6 py-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all duration-200"
            >
              Subscribe to Newsletter
            </button>
          </div>

          <!-- Privacy Note -->
          <p class="text-xs text-gray-500 text-center">
            We respect your privacy. Unsubscribe at any time.
          </p>
        </div>
      </form>
    </div>

    <!-- Additional Info -->
    <div class="mt-8 text-center">
      <p class="text-sm text-gray-600">
        <a href="/booking" class="text-blue-600 hover:underline"
          >Book a course</a
        > or
        <a href="/" class="text-blue-600 hover:underline ml-1">return home</a>
      </p>
    </div>
  </main>
</Layout>
