---
import { useTranslations } from "../../i18n/utils";

const lang = Astro.params.locale as "en" | "es";
const t = useTranslations(lang);
---

<section class="relative h-dvh w-full flex items-center bg-brand-blue">
  <!-- Mobile Background Image (hidden on md and up) -->
  <div
    class="absolute inset-0 md:hidden bg-no-repeat bg-position-[center_right_20%] bg-cover"
    style="background-image: url('/hero-mobile-2.webp');"
  >
  </div>

  <!-- Mobile Overlay (hidden on md and up) -->
  <div class="absolute inset-0 md:hidden bg-brand-blue/50"></div>
  <div
    class="absolute bottom-0 w-full h-[100px] md:hidden bg-linear-to-b from-transparent to-brand-blue"
  >
  </div>

  <div
    class="relative min-h-screen flex pt-28 md:pt-20 md:items-center justify-center gap-10 w-full"
  >
    <div
      class="space-y-8 md:space-y-4 flex flex-col justify-between md:justify-center items-start px-4 md:px-10 md:w-[60%]"
    >
      <h1
        class="font-bold text-4xl md:text-5xl lg:text-7xl tracking-tight text-balance font-helvetica"
      >
        <!-- {t("hero.title")} -->
        <span class="block"> M√ÅS QUE UNA ESCUELA </span>
        <span class="text-brand-red block"> UNA COMUNIDAD DE VIENTOS</span>
      </h1>

      <p
        class="lg:text-xl text-white/95 text-pretty pb-14 leading-relaxed md:pb-0"
      >
        {t("hero.subtitle")}
      </p>
    </div>

    <div
      class="hidden md:flex w-full h-full relative items-center justify-center md:min-h-[calc(100dvh-80px)] md:w-[40%]"
    >
      <video
        poster="/logos/logo-blanco-square.png"
        autoplay
        loop
        muted
        playsinline
        class="absolute inset-0 w-full h-full object-cover"
      >
        <source src="/videos/about.webm" type="video/webm" />
        Your browser does not support the video tag.
      </video>
    </div>
  </div>
</section>
