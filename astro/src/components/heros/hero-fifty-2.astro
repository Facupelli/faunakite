---
import { useTranslations } from "../../i18n/utils";

const lang = Astro.params.locale as "en" | "es";
const t = useTranslations(lang);
---

<section class="relative h-dvh w-full flex items-center bg-brand-blue">
  <!-- Mobile Background Image (hidden on md and up) -->
  <div
    class="absolute inset-0 md:hidden bg-no-repeat bg-position-[center_right_20%] bg-cover"
    style="background-image: url('/hero-mobile-2.webp');"
  >
  </div>

  <!-- Mobile Overlay (hidden on md and up) -->
  <div class="absolute inset-0 md:hidden bg-brand-blue/50"></div>
  <div
    class="absolute bottom-0 w-full h-[100px] md:hidden bg-linear-to-b from-transparent to-brand-blue"
  >
  </div>

  <div
    class="relative min-h-screen flex pt-28 md:pt-20 md:items-center md:grid md:grid-cols-5 md:max-w-7xl md:mx-auto justify-center gap-10 md:gap-20 w-full"
  >
    <div
      class="space-y-8 md:space-y-4 flex flex-col justify-between md:justify-center items-center px-4 md:col-span-3"
    >
      <div class="max-w-2xl mx-auto">
        <h1
          class="font-bold text-4xl md:text-5xl lg:text-6xl tracking-tight text-balance font-helvetica"
        >
          <!-- {t("hero.title")} -->
          <span class="block"> M√ÅS QUE UNA ESCUELA </span>
          <span class="text-brand-red block"> UNA COMUNIDAD DE VIENTOS</span>
        </h1>
      </div>

      <p
        class="lg:text-xl text-white/95 max-w-2xl text-pretty pb-14 leading-relaxed md:pb-0"
      >
        {t("hero.subtitle")}
      </p>
    </div>

    <div
      class="hidden md:relative md:flex w-full h-[90%] relative items-center justify-center md:col-span-2"
    >
      <div
        class="absolute w-full z-20 top-0 bg-linear-to-b from-brand-blue to-transparent h-[50px]"
      >
      </div>

      <div
        class="absolute w-full z-20 bottom-0 bg-linear-to-t from-brand-blue to-transparent h-[50px]"
      >
      </div>

      <video
        poster="/logos/logo-blanco-square.png"
        autoplay
        loop
        muted
        playsinline
        class="absolute inset-0 w-full h-full object-cover"
      >
        <source src="/videos/about.webm" type="video/webm" />
        Your browser does not support the video tag.
      </video>
    </div>
  </div>
</section>
