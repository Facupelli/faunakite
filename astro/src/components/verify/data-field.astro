---
interface Props {
  label: string;
  value?: string | null;
}

const { label, value } = Astro.props;
---

<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 font-gt">
  <dt class="text-sm font-medium text-gray-500 uppercase">{label}</dt>
  <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">{value}</dd>
</div>
