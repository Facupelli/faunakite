---
import BrushStain from "../components/svg/newsletter-background.astro";
import { useTranslations } from "../i18n/utils";
import { actions } from "astro:actions";
import { isInputError } from "astro:actions";

const lang = Astro.params.locale as "en" | "es";
const t = useTranslations(lang);

const result = Astro.getActionResult(actions.newsletter.subscribe);
const inputErrors = isInputError(result?.error) ? result.error.fields : {};

const TURNSTILE_NEWSLETTER_SITE_KEY = "0x4AAAAAACEmwzYSGa4EHMA4";
---

<style>
  dialog[open] {
    animation: float-up 0.4s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  dialog::backdrop {
    background: rgba(15, 23, 42, 0.4);
    backdrop-filter: blur(8px);
    animation: fade-in 0.3s ease-out forwards;
  }

  @keyframes float-up {
    from {
      opacity: 0;
      transform: scale(0.9) translateY(20px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>

<div class="py-10">
  <section class="relative z-10 max-w-7xl mx-auto py-10">
    <div class="absolute inset-0 pointer-events-none z-0" aria-hidden="true">
      <BrushStain class="w-full h-full text-celeste-2" />
    </div>

    <div class="relative z-10 max-w-2xl mx-auto">
      <h2 class="uppercase font-salted text-5xl text-center">
        {t("newsletter.title")}
      </h2>

      <div
        class="px-10 max-w-2xl mx-auto flex gap-y-6 flex-col items-center pt-4 text-lg"
      >
        <p class="text-center text-pretty">
          {t("newsletter.subtitle")}
        </p>

        <form
          id="newsletter-form"
          class="flex items-center gap-2 md:gap-4 w-full"
        >
          <input
            type="email"
            placeholder={t("newsletter.placeholder")}
            required
            name="email"
            class="w-full rounded-xl bg-white/95 border-white h-10 text-base text-brand-blue px-4 tracking-wide focus:border-brand-green focus:ring-brand-green"
          />

          <div
            class="cf-turnstile"
            data-sitekey={TURNSTILE_NEWSLETTER_SITE_KEY}
          >
          </div>

          <button
            type="submit"
            class="py-2 px-6 cursor-pointer rounded-xl bg-brand-blue font-bold text-white"
          >
            {t("newsletter.button")}
          </button>
        </form>

        <dialog
          id="newsletterDialog"
          class="p-0 rounded-3xl shadow-2xl bg-white/95 ring-1 ring-white/50 max-w-md w-full backdrop:bg-slate-900/30 backdrop:backdrop-blur-md open:shadow-xl fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2"
          data-success-title={t("newsletter.dialog.success.title")}
          data-success-message={t("newsletter.dialog.success.message")}
          data-success-button={t("newsletter.dialog.success.button")}
          data-error-title={t("newsletter.dialog.error.title")}
          data-error-message={t("newsletter.dialog.error.message")}
          data-error-button={t("newsletter.dialog.error.button")}
        >
          <div class="relative p-8 text-center">
            <div
              id="statusBg"
              class="absolute top-0 left-0 w-full h-32 bg-linear-to-b from-teal-50/80 to-transparent rounded-t-3xl -z-10 transition-colors duration-300"
            >
            </div>

            <div
              id="iconContainer"
              class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-brand-light mb-6 transition-colors duration-300"
            >
              <svg
                id="iconSuccess"
                class="h-8 w-8 text-brand-blue"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M4.5 12.75l6 6 9-13.5"></path>
              </svg>
              <svg
                id="iconError"
                class="h-8 w-8 text-orange-500 hidden"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"
                ></path>
              </svg>
            </div>

            <h3
              id="dialogTitle"
              class="text-2xl font-bold text-brand-blue mb-2"
            >
              You're Hooked In!
            </h3>
            <p id="dialogMessage" class="text-slate-500 mb-8 leading-relaxed">
              Welcome to the tribe. Check your inbox for the latest wind
              forecasts and gear drops.
            </p>

            <form method="dialog" class="w-full">
              <button
                id="actionBtn"
                class="w-full bg-celeste-3 hover:bg-celeste-2 cursor-pointer text-white font-semibold py-3 px-4 rounded-xl transition-all duration-200 focus:ring-4 focus:ring-brand-light outline-none"
              >
                Let's Ride
              </button>
            </form>
          </div>
        </dialog>
      </div>
    </div>
  </section>
</div>

<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer
></script>

<script>
  import { actions } from "astro:actions";

  function initNewsletter() {
    const form = document.getElementById("newsletter-form") as HTMLFormElement;
    const dialog = document.getElementById(
      "newsletterDialog"
    ) as HTMLDialogElement;
    const title = document.getElementById("dialogTitle") as HTMLHeadingElement;
    const message = document.getElementById(
      "dialogMessage"
    ) as HTMLParagraphElement;
    const iconContainer = document.getElementById(
      "iconContainer"
    ) as HTMLDivElement;
    const iconSuccess = document.getElementById("iconSuccess") as HTMLElement;
    const iconError = document.getElementById("iconError") as HTMLElement;
    const statusBg = document.getElementById("statusBg") as HTMLDivElement;
    const actionBtn = document.getElementById("actionBtn") as HTMLDivElement;

    if (!form || !dialog) {
      console.error("Newsletter form: Required elements not found");
      return;
    }

    const translations = {
      success: {
        title: dialog.dataset.successTitle || "You're Hooked In!",
        message:
          dialog.dataset.successMessage ||
          "Welcome to the tribe. Check your inbox for the latest wind forecasts and gear drops.",
        button: dialog.dataset.successButton || "Let's Ride",
      },
      error: {
        title: dialog.dataset.errorTitle || "Wipeout!",
        message:
          dialog.dataset.errorMessage ||
          "Something went wrong. Please try again.",
        button: dialog.dataset.errorButton || "Untangle & Retry",
      },
    };

    function showDialog(state: "success" | "error") {
      const config = translations[state];

      title.textContent = config.title;
      message.textContent = config.message;
      actionBtn.textContent = config.button;

      if (state === "success") {
        iconContainer.className =
          "mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-brand-light mb-6 transition-colors duration-300";
        statusBg.className =
          "absolute top-0 left-0 w-full h-32 bg-gradient-to-b from-teal-50/80 to-transparent rounded-t-3xl -z-10";
        actionBtn.className =
          "w-full bg-celeste-3 hover:bg-celeste-2 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-200 focus:ring-4 focus:ring-brand-light outline-none";

        iconSuccess.classList.remove("hidden");
        iconError.classList.add("hidden");
      } else {
        iconContainer.className =
          "mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-orange-100 mb-6 transition-colors duration-300";
        statusBg.className =
          "absolute top-0 left-0 w-full h-32 bg-gradient-to-b from-orange-50/80 to-transparent rounded-t-3xl -z-10";
        actionBtn.className =
          "w-full bg-orange-400 hover:bg-orange-500 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-200 focus:ring-4 focus:ring-orange-200 outline-none";

        iconSuccess.classList.add("hidden");
        iconError.classList.remove("hidden");
      }

      dialog.showModal();
    }

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const submitButton = form.querySelector(
        'button[type="submit"]'
      ) as HTMLButtonElement;
      const emailInput = form.querySelector(
        'input[name="email"]'
      ) as HTMLInputElement;

      submitButton.disabled = true;
      submitButton.textContent = "Enviando...";

      try {
        const formData = new FormData(form);
        const { data, error } = await actions.newsletter.subscribe(formData);

        if (error) {
          showDialog("error");
        } else {
          showDialog("success");
          form.reset();
        }
      } catch (err) {
        showDialog("error");
      } finally {
        submitButton.disabled = false;
        submitButton.textContent = "Send";
      }
    });

    dialog.addEventListener("click", (e) => {
      const rect = dialog.getBoundingClientRect();
      const clickedOutside =
        e.clientX < rect.left ||
        e.clientX > rect.right ||
        e.clientY < rect.top ||
        e.clientY > rect.bottom;

      if (clickedOutside) {
        dialog.close();
      }
    });
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initNewsletter);
  } else {
    initNewsletter();
  }
</script>
