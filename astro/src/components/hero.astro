  <div
    class="relative min-h-screen flex items-center justify-center gap-20 w-full"
  >
    <div class="space-y-4 flex flex-col justify-center items-center">
      <div class="max-w-2xl mx-auto">
        <h1
          class="font-bold text-4xl sm:text-5xl md:text-6xl tracking-tight text-balance font-helvetica"
        >
          <!-- {t("hero.title")} -->
