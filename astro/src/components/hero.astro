---
import { useTranslations } from "../i18n/utils";

const lang = Astro.params.locale as "en" | "es";
const t = useTranslations(lang);
---

<section
  class="relative h-[calc(100dvh-5rem)] w-full flex items-center bg-brand-blue"
>
  <div class="absolute h-dvh inset-0 z-20 flex justify-end">
    <div class="relative w-full md:w-1/2 h-full">
      <video
        poster="/logos/logo-blanco-square.png"
        autoplay
        loop
        muted
        playsinline
        class="absolute inset-0 w-full h-full object-cover"
      >
        <source src="/videos/about.webm" type="video/webm" />
        Your browser does not support the video tag.
      </video>
      {/* Gradient overlay for better text readability */}
      <div
        class="absolute inset-0 bg-gradient-to-r from-brand-blue via-brand-blue/50 to-transparent md:from-brand-blue md:via-brand-blue/50 md:to-brand-blue/30"
      >
      </div>
    </div>
    {/* Solid color background on left side for desktop */}
    <div
      class="hidden md:block absolute left-0 top-0 bottom-0 w-1/2 bg-primary"
    >
    </div>
  </div>

  <div class="relative z-30 w-full px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="md:w-1/2">
        <div>
          <div class="grid gap-4">
            <h1
              class="font-bold text-4xl sm:text-5xl md:text-6xl tracking-tight text-balance font-helvetica"
            >
              {t("hero.title")}
            </h1>
            <p
              class="text-lg sm:text-xl text-white/95 max-w-2xl text-pretty leading-relaxed"
            >
              {t("hero.subtitle")}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
