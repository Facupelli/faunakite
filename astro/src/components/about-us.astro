---
import aboutUsImage from "../assets/about-us.jpeg";
import { useTranslations } from "../i18n/utils";

const lang = Astro.params.locale as "en" | "es";
const t = useTranslations(lang);
---

<section class="relative pt-10">
  <div class="relative z-40 bg-brand-brown-mid pb-20">
    <h2 class="relative z-40 pt-10 pl-10 uppercase text-6xl pb-10 font-salted">
      {t("about-us.title")}
    </h2>

    <div class="relative grid grid-cols-2 gap-10 px-4">
      <div>
        <img
          src={aboutUsImage.src}
          alt=""
          class="w-full h-full object-contain"
          fetchpriority="auto"
        />
      </div>

      <div class="grid gap-4">
        <p class="mb-0">
          {t("about-us.summary")}
        </p>
      </div>
    </div>
  </div>
</section>
