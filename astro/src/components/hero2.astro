---
import { useTranslations } from "../i18n/utils";

const lang = Astro.params.locale as "en" | "es";
const t = useTranslations(lang);
---

<section class="relative min-h-screen bg-background overflow-hidden">
  {/* Main Content Grid */}
  <div class="relative min-h-screen grid grid-cols-1 lg:grid-cols-2">
    {/* Left Side - Text Content */}
    <div
      class="flex flex-col justify-center px-6 py-32 md:px-12 lg:px-16 lg:py-0 order-2 lg:order-1"
    >
      <div class="max-w-xl">
        {/* Tagline */}
        <div class="flex items-center gap-3 mb-8">
          <div class="h-px w-12 bg-brand-brown-light"></div>
          <span
            class="text-xs uppercase tracking-[0.3em] text-brand-brown-light"
            >Kitesurf School</span
          >
        </div>

        {/* Slogan - Now the main headline */}
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold leading-[1.1] tracking-tight text-foreground mb-6 text-balance"
        >
          More than a school,
          <br />
          <span class="text-brand-brown-light">a community of winds</span>
        </h1>

        {/* Description */}
        <p class="text-muted-foreground leading-relaxed mb-10 max-w-md text-lg">
          Join our passionate community of wind riders. Whether you're a
          beginner or looking to master advanced techniques, we'll guide you
          through every gust.
        </p>

        {/* CTAs */}
        <div class="flex flex-wrap gap-4">
          <button
            class="bg-brand-brown-light text-brand-brown-light-foreground hover:bg-brand-brown-light/90 px-8"
          >
            Start Your Journey
          </button>
          <button class="text-foreground hover:bg-foreground/10">
            Meet the Crew
          </button>
        </div>
      </div>
    </div>

    {/* Right Side - Vertical Video */}
    <div
      class="relative flex items-center justify-center py-24 lg:py-0 order-1 lg:order-2"
    >
      {/* Background Glow */}
      <div
        class="absolute inset-0 flex items-center justify-center pointer-events-none"
      >
        <div
          class="w-[400px] h-[600px] bg-brand-brown-light/20 blur-[100px] rounded-full"
        >
        </div>
      </div>

      {/* Video Container */}
      <div
        class="relative w-[280px] sm:w-[320px] md:w-[360px] aspect-9/16 rounded-2xl overflow-hidden shadow-2xl shadow-brand-brown-light/20 ring-1 ring-foreground/10"
      >
        <video
          poster="/logos/logo-blanco-square.png"
          autoplay
          loop
          muted
          playsinline
          class="absolute inset-0 w-full h-full object-cover"
        >
          <source src="/videos/about.webm" type="video/webm" />
          Your browser does not support the video tag.
        </video>

        {/* Video Overlay */}
        <div
          class="absolute inset-0 bg-linear-to-t from-background/60 via-transparent to-background/30"
        >
        </div>
      </div>
    </div>

    {/* Bottom Marquee */}
    <div
      class="absolute bottom-0 left-0 right-0 py-4 border-t border-border overflow-hidden"
    >
      <div class="flex animate-marquee whitespace-nowrap">
        {
          Array.from({ length: 6 }).map((_, i) => (
            <span class="mx-8 text-xs uppercase tracking-[0.3em] text-muted-foreground">
              Kitesurfing • Lessons • Community • Adventure • Wind • Freedom •
              Ocean • Passion •
            </span>
          ))
        }
      </div>
    </div>
  </div>
</section>
