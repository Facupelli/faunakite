---
import Footer from "../components/footer.astro";
import Nav from "../components/nav.astro";
import ServicesNav from "../components/services-nav.astro";
import AboutUsUnderSeparator from "../components/svg/about-us-under-separator.astro";
import TheSpotTopSeparator from "../components/svg/the-spot-top-separator.astro";
import { useTranslations } from "../i18n/utils";
import Layout from "./Layout.astro";

export async function getStaticPaths() {
  return [{ params: { locale: "en" } }, { params: { locale: "es" } }];
}

interface Props {
  title?: string;
}

const lang = Astro.params.locale as "en" | "es";
const t = useTranslations(lang);
---

<Layout title="Lo Que Hacemos | Fauna Kite " locale={Astro.params.locale}>
  <Fragment slot="head">
    <meta
      name="description"
      content="Clases y cursos de kitesurf y wingfoil en Cuesta del Viento. Cursos iniciales, intensivos, clases avanzadas, rental, kite camps y viajes. Aprendé con seguridad, buena energía y sé parte de la comunidad FAUNA."
    />
    <link rel="canonical" href={`https://faunakite.com/${Astro.params.locale}/services/clases`} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="FAUNA Kite" />
    <meta property="og:title" content="Clases y Cursos de Kitesurf | FAUNA Kite" />
    <meta
      property="og:description"
      content="Clases y cursos de kitesurf y wingfoil en Cuesta del Viento. Aprendé con los mejores instructores y viví la experiencia FAUNA."
    />
    <meta property="og:url" content={`https://faunakite.com/${Astro.params.locale}/services/clases`} />
    <meta
      property="og:image"
      content="https://faunakite.com/og/fauna-services.jpg"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Clases y Cursos de Kitesurf | FAUNA Kite" />
    <meta
      name="twitter:description"
      content="Clases y cursos de kitesurf y wingfoil en Cuesta del Viento. Aprendé con seguridad y buena energía."
    />
    <meta
      name="twitter:image"
      content="https://faunakite.com/og/fauna-services.jpg"
    />
    <!-- SCHEMA MARKUP FOR SERVICES -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "SportsActivityLocation",
      "name": "FAUNA Kite - Servicios de Kitesurf",
      "description": "Clases y cursos de kitesurf y wingfoil en Cuesta del Viento. Cursos iniciales, intensivos, clases avanzadas, rental, kite camps y viajes.",
      "url": `https://faunakite.com/${Astro.params.locale}/services/clases`,
      "image": "https://faunakite.com/og/fauna-services.jpg",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "San Juan",
        "addressCountry": "AR"
      },
      "sport": ["Kitesurfing", "Wing Foiling"],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Servicios de Kitesurf",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Course",
              "name": "Curso Inicial de Kitesurf",
              "description": "Curso completo de 9 horas para principiantes"
            },
            "provider": {
              "@type": "SportsActivityLocation",
              "name": "FAUNA Kite"
            }
          },
          {
            "@type": "Offer", 
            "itemOffered": {
              "@type": "Course",
              "name": "Clases Individuales de Kitesurf",
              "description": "Clases personalizadas para todos los niveles"
            },
            "provider": {
              "@type": "SportsActivityLocation",
              "name": "FAUNA Kite"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Course", 
              "name": "Clases de Wingfoil",
              "description": "Aprendé wingfoil con instructores certificados"
            },
            "provider": {
              "@type": "SportsActivityLocation",
              "name": "FAUNA Kite"
            }
          }
        ]
      }
    }
    </script>
  </Fragment>

  <header>
    <Nav />
  </header>

  <main class="min-h-dvh bg-brand-light">
    <div class="relative w-full h-[220px] md:h-[300px]">
      <div
        class="absolute inset-0 bg-no-repeat bg-position-[bottom_42%_right_50%] bg-cover"
        style="background-image: url('/headers/header-4.jpeg');"
      >
      </div>

      <div
        class="flex justify-center max-w-4xl mx-auto relative z-20 h-full items-end pb-4 md:pb-10"
      >
        <h1
          class="font-salted text-shadow-2xs uppercase text-shadow-brand-blue text-5xl md:text-8xl pr-4 md:pr-0"
        >
          {t("services.layout.title")}
        </h1>
      </div>

      <div class="absolute bottom-0 left-0 w-full text-brand-blue">
        <TheSpotTopSeparator />
      </div>
    </div>

    <section class="bg-brand-blue">
      <div class="py-10 md:py-20">
        <ServicesNav />
      </div>

      <slot name="header" />
    </section>

    <section class="relative">
      <div
        class="bg-brand-light bg-[url('/cuesta-del-viento/white-wave-contrast-2.png')] bg-size-[42px_auto]"
      >
        <div class="text-brand-blue drop-shadow-xs drop-shadow-brand-blue">
          <AboutUsUnderSeparator />
        </div>

        <div class="pt-10 pb-20">
          <slot />
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
