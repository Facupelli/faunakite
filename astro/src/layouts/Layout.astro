---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

export interface Props {
  title?: string;
  locale?: string;
}

const { title, locale = "es" } = Astro.props;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ?? "Fauna Kite"}</title>

    <link
      rel="preload"
      href="/fonts/salted-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/helvetica-neue-bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/helvetica-neue-light.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <slot name="head" />

    <ClientRouter />
  </head>
  <body class="bg-brand-light text-white font-helvetica">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
